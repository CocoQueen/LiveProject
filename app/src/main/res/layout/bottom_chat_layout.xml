<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/alphawhite"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/mCb_bcl"
        android:layout_width="50dp"
        android:layout_height="20.24dp"
        android:background="@drawable/selector_danmu_swich"
        android:button="@null" />

    <EditText
        android:id="@+id/mEd_bcl"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/shape_bg_bcl"
        android:hint="快打个招呼吧，让主播看到你~~" />

    <LinearLayout
        android:id="@+id/mLl_bcl_send"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTv_bcl_send"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/pink"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>