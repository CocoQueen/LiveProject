<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mFl"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/mRl_gift_item"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="center|left">

        <ImageView
            android:id="@+id/mImg_sender"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/mTv_sender_id"
            android:layout_width="78dp"
            android:layout_height="25dp"
            android:layout_alignTop="@id/mImg_sender"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/mImg_sender"
            android:maxLines="1"
            android:text="CocoCoco"
            android:textColor="#0f0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mTv_gift_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mTv_sender_id"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/mImg_sender"
            android:text="送出了礼物"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/mImg_gift_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/xuegao" />

    <TextView
        android:id="@+id/mTv_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:text="X20"
        android:textColor="@color/gold"
        android:textSize="40sp" />

</FrameLayout>