<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRl"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff">

    <TextView
        android:id="@+id/mTv_editprofile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:text="xxx"
        android:textColor="#2e2e2e"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/mImg_right_arrow"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@mipmap/right_arraw" />

    <TextView
        android:id="@+id/mTv_editprofile_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/mImg_right_arrow"
        android:text="xxx"
        android:textColor="#2e2e2e"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/mImg_editprofile_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@mipmap/logo"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/mTv_seprater"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#4d4c4c" />

</RelativeLayout>